{
	"title": "html2canvas",
	"name": "html2canvas",
	"description": "Screenshots with JavaScript",
	"main": "dist/html2canvas.js",
	"module": "dist/html2canvas.esm.js",
	"typings": "dist/types/index.d.ts",
	"browser": "dist/html2canvas.js",
	"version": "1.4.1",
	"author": {
		"name": "Niklas von Hertzen",
		"email": "niklasvh@gmail.com",
		"url": "https://hertzen.com"
	},
	"engines": {
		"node": ">=8.0.0"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:niklasvh/html2canvas.git"
	},
	"bugs": {
		"url": "https://github.com/niklasvh/html2canvas/issues"
	},
	"scripts": {
		"prebuild": "rimraf dist/ && rimraf build/ && mkdirp dist && mkdirp build",
		"build": "tsc --module commonjs && rollup -c rollup.config.ts --bundleConfigAsCjs && npm run build:create-reftest-list && npm run build:testrunner && npm run build:minify",
		"build:testrunner": "rollup -c tests/rollup.config.ts --bundleConfigAsCjs",
		"build:minify": "uglifyjs --compress --comments /^!/ -o dist/html2canvas.min.js --mangle -- dist/html2canvas.js",
		"build:reftest-result-list": "ts-node scripts/create-reftest-result-list.ts",
		"build:create-reftest-list": "tsx scripts/create-reftest-list.ts tests/reftests/ignore.txt build/reftests.ts",
		"build:reftest-preview": "webpack --config www/webpack.config.js",
		"release": "standard-version",
		"format": "prettier --write \"{src,www/src,tests,scripts}/**/*.ts\"",
		"lint": "eslint src/**/*.ts --max-warnings 0",
		"test": "npm run lint && npm run unittest && npm run karma",
		"unittest": "jest",
		"reftests-diff": "mkdirp tmp/snapshots && jest --roots=tests --testMatch=**/reftest-diff.ts",
		"karma": "tsx tests/karma",
		"watch": "rollup -c rollup.config.ts -w",
		"watch:unittest": "mocha --require ts-node/register --watch-extensions ts -w src/**/__tests__/*.ts",
		"start": "ts-node tests/server --port=8080 --cors=8081",
		"init": "npm i --package-lock-only && npm ci"
	},
	"homepage": "https://html2canvas.hertzen.com",
	"license": "MIT",
	"dependencies": {
		"@rollup/plugin-commonjs": "^25.0.7",
		"@rollup/plugin-json": "^6.1.0",
		"@rollup/plugin-node-resolve": "^15.2.3",
		"@rollup/plugin-typescript": "^11.1.6",
		"@types/express": "^4.17.21",
		"@types/glob": "^8.1.0",
		"@types/jest": "^29.5.12",
		"@types/jest-image-snapshot": "^6.4.0",
		"@types/karma": "^6.3.8",
		"@types/mocha": "^10.0.6",
		"@types/node": "^20.12.12",
		"@types/platform": "^1.3.6",
		"@typescript-eslint/eslint-plugin": "^7.10.0",
		"@typescript-eslint/parser": "^7.10.0",
		"appium-ios-simulator": "^6.1.5",
		"body-parser": "^1.20.2",
		"chromeless": "^1.5.2",
		"cors": "^2.8.5",
		"css-line-break": "^2.1.0",
		"es6-promise": "^4.2.8",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"express": "^4.19.2",
		"filenamify-url": "^3.1.0",
		"glob": "^10.3.16",
		"html2canvas-proxy": "1.0.1",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"jest-image-snapshot": "^6.4.0",
		"jquery": "^3.7.1",
		"js-polyfills": "^0.1.43",
		"karma": "^6.4.3",
		"karma-chrome-launcher": "^3.2.0",
		"karma-firefox-launcher": "^2.1.3",
		"karma-junit-reporter": "^2.0.1",
		"karma-mocha": "^2.0.1",
		"karma-safarinative-launcher": "^1.1.0",
		"mkdirp": "^3.0.1",
		"mocha": "^10.4.0",
		"node-simctl": "^7.4.4",
		"platform": "^1.3.6",
		"prettier": "^3.2.5",
		"rimraf": "^5.0.7",
		"rollup": "^4.17.2",
		"serve-index": "^1.9.1",
		"slash": "^5.1.0",
		"standard-version": "^9.5.0",
		"text-segmentation": "^1.0.3",
		"ts-jest": "^29.1.3",
		"ts-loader": "^9.5.1",
		"ts-node": "^10.9.2",
		"tslib": "^2.6.2",
		"tsx": "^4.10.5",
		"typescript": "^5.4.5",
		"uglify-js": "^3.17.4",
		"webpack": "^5.91.0",
		"webpack-cli": "^5.1.4",
		"yargs": "^17.7.2"
	}
}